{
  "name": "lexrank.js",
  "version": "1.2.0",
  "description": "Text summarization using the lexrank algorithm",
  "main": "src/lexrank.js",
  "repository": "https://github.com/gorango/lexrank.js",
  "author": "https://github.com/gorango",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-register": "^6.24.0",
    "chai": "^3.5.0",
    "cross-env": "^3.2.4",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "rimraf": "^2.6.1",
    "snazzy": "^6.0.0",
    "standard": "^9.0.2"
  },
  "scripts": {
    "build": "npm run clean:dist & npm run lint & npm run build:transpile",
    "build:transpile": "cross-env NODE_ENV=production babel src -d dist",
    "clean": "rimraf coverage dist",
    "clean:dist": "rimraf dist",
    "clean:coverage": "rimraf coverage",
    "coverage": "npm run clean:coverage & npm run test:ci",
    "lint": "standard src/*.js --verbose | snazzy",
    "pretest": "npm run lint",
    "test": "mocha ./**/*.spec.js --watch --compilers js:babel-register",
    "test:ci": "nyc --all mocha src/*.js"
  }
}
